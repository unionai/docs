<html>
    <head>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
        <link id="home_css" rel="stylesheet" href="@@BASE@@/css/home.css" />
        <script>
            // Set up error handler immediately
            document.addEventListener('DOMContentLoaded', function() {
                const logo = document.getElementById('logo');
                logo.onerror = function() {
                    // If main logo fails, try fallback path
                    console.log('Primary logo failed to load, trying fallback');
                    this.src = 'static/images/icon-logo.svg';

                    // Add second error handler for fallback
                    this.onerror = function() {
                        console.error('Failed to load logo image from both paths');
                        logo.style.display = 'none';
                    };
                };
            });

            const css = document.getElementById('home_css');
            css.onerror = function() {
                console.log('Primary CSS failed to load, trying fallback');
                this.href = 'static/css/home.css';

                // Add second error handler for fallback
                this.onerror = function() {
                    console.error('Failed to load CSS from both paths');
                    css.disabled = true; // Disable the stylesheet if it fails
                };
            };
        </script>
    </head>
    <body>
        <div class="container">
            <h1>
                <img id="logo" src="@@BASE@@/images/icon-logo.svg" class="logo" />
                404 - Page Not Found
            </h1>

            <p>We are sorry, but the page you are looking for does not exist.</p>

            <p>
                Please click here for the closest 
                documentation entry point:
            </p>
            <p>
                <a href="@@BASE@@/@@VARIANT@@/">@@BASE@@/@@VARIANT@@</a>
            </p>
        </div>
    </body>
</html>


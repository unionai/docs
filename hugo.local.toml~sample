# hugo.local.toml - Overrides for use in development mode, a.k.a., 'make dev'

[params]

# The current variant to display. Change this in 'hugo.toml', save,
# and the browser will refresh automatically with the new variant.
variant = "serverless"

# If 'true', it will show all the content that did not match the variant.
# This is useful when the page contains multiple sections that vary with
# the selected variant, so you can see all at once.
show_inactive = true

# If 'true', it will also highlight the *current* content for the variant.
highlight_active = true

# If set, it highlights replacement keys and their values
highlight_keys = true